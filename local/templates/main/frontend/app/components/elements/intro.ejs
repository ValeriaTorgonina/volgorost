                        </div>
                    <% }) %>
                </div>
            </div>
            <button class="intro__prev swiper-button-prev">
                <svg class="i-icon">
                    <use xlink:href="#icon-arrow"></use>
                </svg>
            </button>
            <button class="intro__next swiper-button-next">
                <svg class="i-icon">
                    <use xlink:href="#icon-arrow"></use>
                </svg>
            </button>
            <div class="intro__pagination swiper-pagination"></div>
        </div>
    </div>
</section>