<section class="intro">
    <div class="container">
        <div id="sliderIntro" class="intro__slider">
            <div class="intro__slider-container swiper-container">
                <div class="intro__slider-wrapper swiper-wrapper">
                    <% const list = [
                        {}, {}, {}, {}, {}, {}
                    ] %>

                    <% list.forEach(function (item) { %>
                        <div class="intro__slide swiper-slide">
                            <img class="intro__slide-img" src="../../images/content/intro-slide.jpg" usemap="#navigation"></p>
                            <div class="intro__slide-dot" style="top: 71%; left: 12%"></div>
